<div id="dom_id author">
  <tr>
    <td><%= author.id %></td>
    <td><%= author.created_at.strftime("%d/%m/%Y")%></td>
    <td><%= author.name%></td>
    <td><%= author.email%></td>
    <% if author_signed_in? && action_name != "show" %>
      <td><%= link_to t('common.show'), author, class: "btn btn-success"%></td>
      <td><%= link_to t('common.edit'), edit_author_path(author), class: "btn btn-info"%></td>
      <td><%= link_to t('common.destroy'), author_path(author), method: :delete, class: "btn btn-danger", data: { 'turbo-method': :delete, 'turbo-confirm': t('message.confirm_destroy', attribute: t('articles.article.one')) }%></td>
    <% end %>
  </tr>
</div>
